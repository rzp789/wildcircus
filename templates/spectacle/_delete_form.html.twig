<form method="post" action="{{ path('spectacle_delete', {'id': spectacle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ spectacle.id) }}">
    <button class="btn btn-danger mb-5 ml-5">Supprimer</button>
</form>
